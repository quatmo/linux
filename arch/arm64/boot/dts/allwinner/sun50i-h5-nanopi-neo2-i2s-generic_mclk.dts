/dts-v1/;
#include "sun50i-h5-nanopi-neo2.dts"

/ {
	pcm5102a: pcm5102a-codec {
		#sound-dai-cells = <0>;
		compatible = "ti,pcm5102a";
		status = "okay";
	};
};

&codec {
	status = "disabled";
};

&pio {
	spi0_cs_pins: spi0_cs_pins {
		pins = "PC3";
	};

	i2s0_pins: i2s0 {
		pins = "PA6", "PA18", "PA19", "PA20", "PA21";
	};
};

&i2c0 {
    status = "okay";
};

&i2c1 {
    /* no I2C1 for I2S0 */
    status = "disabled";
};

&i2c2 {
    status = "okay";
};

&spi0 {
    cs-gpios = <&pio 2 3 GPIO_ACTIVE_HIGH>;

    pitft_ts: pitft-ts@1 {
        status = "disabled";
    };
};

&i2s0 {
	sound-dai = <&pcm5102a>;
	status = "okay";
};


